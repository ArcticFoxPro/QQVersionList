<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_qq_install_card"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="?attr/colorSecondaryContainer"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="?attr/colorSecondaryContainer"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/item_qq_install_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:text="@string/localQQVersion"
            android:textColor="?attr/colorOnSecondaryContainer"
            app:drawableStartCompat="@drawable/phone_find_line"
            app:drawableTint="?attr/colorOnSecondaryContainer" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_tim_install_card"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="?attr/colorSecondaryContainer"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="?attr/colorSecondaryContainer"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/item_tim_install_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:text="@string/localTIMVersion"
            android:textColor="?attr/colorOnSecondaryContainer"
            app:drawableStartCompat="@drawable/phone_find_line"
            app:drawableTint="?attr/colorOnSecondaryContainer" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>