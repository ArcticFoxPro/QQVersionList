<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="6dp"
    android:paddingEnd="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/firebase_info_insights"
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:backgroundTint="?android:colorBackground">

                <TextView
                    android:id="@+id/firebase_info_insights_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:drawablePadding="4dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:text="@string/enablingFirebaseServiceInsights"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/lightbulb_fill" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/firebase_info_warning2"
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="?android:colorBackground">

                <TextView
                    android:id="@+id/firebase_info_warning2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:drawablePadding="4dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:text="@string/enablingFirebaseServiceWarning2"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/error_warning_fill" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/firebase_info_warning"
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:backgroundTint="?android:colorBackground">

                <TextView
                    android:id="@+id/firebase_info_warning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:drawablePadding="4dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:text="@string/enablingFirebaseServiceWarning"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/error_warning_fill" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/firebase_info_cancel"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/firebase_info_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/continueKey" />

            </com.google.android.material.button.MaterialButtonGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
